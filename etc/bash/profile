# 
# ~/Local/etc/bash/profile
#

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

# User specific environment and startup programs

VISUAL=vi && [ -n "$(which vim 2> /dev/null)" ] && VISUAL=vim
EDITOR=$VISUAL

export VISUAL EDITOR

PATH=$PATH:$HOME/.local/bin:$HOME/Local/bin

export PATH

# EOF
